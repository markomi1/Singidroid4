<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
                android:layout_height="match_parent"
>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Singidroid 4"
            android:textColor="@color/black"
            android:textSize="40sp"
            android:id="@+id/appName"
            android:layout_alignParentStart="true" android:layout_marginStart="98dp"
            android:layout_marginTop="36dp" android:layout_below="@+id/imageView"
            android:layout_centerHorizontal="true"/>
    <TextView
            android:text="Version 1"
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:gravity="center"

            android:layout_height="wrap_content" android:layout_marginTop="14dp"
            android:layout_below="@+id/appName"
            android:layout_alignParentStart="true"
            android:layout_marginStart="173dp" android:layout_centerInParent="true"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/ic_singidunum_logo"
            android:id="@+id/imageView" android:layout_alignParentEnd="true" android:layout_marginEnd="150dp"
            android:layout_alignParentStart="true" android:layout_marginStart="141dp"
            android:layout_centerHorizontal="true" android:layout_marginTop="109dp"
            android:layout_alignParentTop="true"/>
    <TextView
            android:text="View Open Source Libraries"
            android:id="@+id/ossLicense"
            android:foreground="?selectableItemBackgroundBorderless"
            android:clickable="true"
            android:textSize="17sp"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:layout_height="wrap_content" android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp" android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"/>


</RelativeLayout>
