<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
                                              xmlns:app="http://schemas.android.com/apk/res-auto"
                                              android:layout_width="wrap_content"
                                              android:layout_height="wrap_content">
    <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="wrap_content"
                                                       android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatImageView
                android:src="@drawable/ic_email"
                android:background="@drawable/image_border_shadow"
                android:id="@+id/emailIcon"
                android:layout_width="70dp"
                android:layout_height="70dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.051"
                app:layout_constraintTop_toBottomOf="@+id/phoneNumberIcon" android:layout_marginTop="16dp"/>
        <TextView
                android:text="Contact name"
                android:id="@+id/contact_location_name"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.056"
                app:layout_constraintTop_toTopOf="parent" android:textStyle="bold" android:textSize="20sp"/>

        <androidx.appcompat.widget.AppCompatImageView
                android:src="@drawable/ic_smartphone"
                android:background="@drawable/image_border_shadow"
                android:id="@+id/phoneNumberIcon"
                android:layout_width="70dp"
                android:layout_height="70dp" app:layout_constraintTop_toBottomOf="@+id/view"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="12dp"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.051"/>
        <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/contact_email"
                app:layout_constraintStart_toEndOf="@+id/phoneNumberIcon" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.03" android:textSize="15sp" android:textColor="#000000"
                app:layout_constraintTop_toBottomOf="@+id/contact_email_name" android:layout_marginTop="3dp"/>
        <TextView
                android:text="Some name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/contact_email_name"
                app:layout_constraintStart_toEndOf="@+id/phoneNumberIcon" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.03" android:textSize="18sp" android:textColor="#000000"
                app:layout_constraintTop_toBottomOf="@+id/phoneNumberIcon" android:layout_marginTop="16dp"
                android:textStyle="bold"/>
        <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/contact_phone_location"
                app:layout_constraintStart_toEndOf="@+id/phoneNumberIcon" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.03" android:textSize="15sp" android:textColor="#000000"
                app:layout_constraintTop_toBottomOf="@+id/contact_phone_name" android:layout_marginTop="3dp"/>
        <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/contact_phone_number"
                app:layout_constraintStart_toEndOf="@+id/phoneNumberIcon" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.03" android:textSize="15sp" android:textColor="#000000"
                app:layout_constraintTop_toBottomOf="@+id/contact_phone_location" android:layout_marginTop="3dp"/>
        <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:backgroundTint="@color/black"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="17dp"
                android:layout_marginRight="15dp"
                android:background="@android:color/darker_gray"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/contact_location_name" android:id="@+id/view"/>

        <TextView
                android:text="Some name"
                android:textSize="18sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/contact_phone_name"
                app:layout_constraintStart_toEndOf="@+id/phoneNumberIcon" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/view" android:layout_marginTop="12dp"
                app:layout_constraintHorizontal_bias="0.03" android:textColor="#000000" android:textStyle="bold"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.appcompat.widget.LinearLayoutCompat>
